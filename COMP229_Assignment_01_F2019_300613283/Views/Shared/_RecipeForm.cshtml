@model Recipe
    <form class="p-a-1" asp-action="AddRecipe" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name">Recipe Name:</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Description">Description:</label>
            <input class="form-control" asp-for="Description" />
        </div>
        <div class="form-group">
            <label asp-for="Creator">Created By:</label>
            <input class="form-control" asp-for="Creator" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save Recipe</button>
            <button class="btn btn-primary" type="reset">Reset</button>
            <a class="btn btn-primary" asp-action="Index">Return to Home Page</a>
        </div>
    </form>