@model Review

@{
    ViewBag.Title = "Review Recipe";
}

<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>Review</h4></div>
    <div class="panel-body">
        <form class="p-a-1" asp-action="ReviewRecipe" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label>What do you think of this recipe?</label>
                <textarea class="form-control" asp-for="RecipeReview" ></textarea>
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Add Review</button>
            </div>
        </form>
    </div>
</div>
